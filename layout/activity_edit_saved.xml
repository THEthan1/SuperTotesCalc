<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowish" 
    tools:context="ethan.glick.supestotescalc.EditSaved" >

    <TextView
        android:id="@+id/tvEditSaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/editSaved"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/btReturn_Edit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/ret" 
        android:background="@color/clear" 
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btSenderHomeButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/home"
        android:background="@color/clear" 
        android:onClick="onClick" />

    <ListView
        android:id="@+id/tvSaved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEditSaved"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="6dp" >

    </ListView>

</RelativeLayout>
