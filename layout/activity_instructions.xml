<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/black"
    tools:context="ethan.glick.supestotescalc.InstructionsActivity" >

    <TextView
        android:id="@+id/tvPrimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/instructions"
        android:textColor="@color/red"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    


    <Button
        android:id="@+id/btInstructions_HomeBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/home"
        android:background="@color/clear"
        android:textColor = "@color/yellowish"
        android:onClick="onClickHome" />

    <LinearLayout
        android:id="@+id/LayoutPrimeFunctions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrimeTitle"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btCalculator"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/calculator"
            android:textSize="20sp" 
            android:background="@color/orange"
            android:textColor="@color/blue"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btQ_Solver"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/quad_solver"
            android:textSize="20sp"
            android:background="@color/orange" 
            android:textColor="@color/blue"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btPrimes"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/primes"
            android:textSize="20sp"
            android:background="@color/orange" 
            android:textColor="@color/blue"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btQgame"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/Q_game"
            android:textSize="20sp" 
            android:background="@color/orange"
            android:textColor="@color/blue"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btQsender"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="@string/editor"
            android:textSize="20sp"
            android:background="@color/orange"
            android:textColor="@color/blue"
            android:onClick="onClick" />
    </LinearLayout>

   <TextView
        android:id="@+id/tvShowInstruction"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_below="@+id/LayoutPrimeFunctions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textColor="@color/yellowish"
        android:visibility="invisible"/>

</RelativeLayout>